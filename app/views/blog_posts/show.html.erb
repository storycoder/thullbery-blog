<p id="notice"><%= notice %></p>

<div class="panel panel-primary">
	<div class="panel-heading">
		<%= @blog_post.title %>
	</div>
	<div class="panel-body">
	  by <strong><%= @blog_post.user.username %></strong><span class="posted-at"> posted at: <%= @blog_post.created_at.strftime('%m/%d/%Y at &I:%M%p') %></span><br />
	  <p><%= @blog_post.blog_entry %></p>
	</div>
	<div>
		<%= link_to 'Edit Post', edit_blog_post_path(@blog_post), class: "btn btn-warning" %> 
	</div>
</div>

<div class="panel panel-success">
	<div class="panel-heading">
	Leave a Comment
	</div>
	<div class="panel-body">
		<%= render 'comments/form' %>
	</div>
</div>



<div class="panel panel-default">
	<div class="panel-header">
		<h2>Comments</h2>
	</div>
	<% @blog_post.comments.each do |comment| %>
		<div class="panel-body">
			<p><strong><%= comment.user.username %></strong> said:</p>
			<p><%= comment.comment_entry %></p>
			<p><span class="posted-at"><%= comment.created_at.strftime('%m/%d/%Y at %H:%M:%S') %></span></p>
		</div>
	<% end %>
</div>
<div>
	<%= link_to 'Back', blog_posts_path, class: "btn btn-primary" %>
</div>
